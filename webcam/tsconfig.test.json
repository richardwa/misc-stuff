{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./target",
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "ES2017",
      "DOM"
    ],
  },
  "include": [
    "src/**/*.spec.ts"
  ]
}