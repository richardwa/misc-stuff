#!/bin/bash
export PS1='\[\033[01;32m\]\u@\h \[\033[01;33m\]\W\[\033[00m\]\$ '
export PATH=~/bin:~/.cabal/bin:$PATH:~/.platformio/penv/bin:~/.local/bin
export LS_COLORS='ow=01;36;40'
export VISUAL=vim
export EDITOR=vim
alias vi=nvim
alias emacs="emacs -nw"
alias ls="ls --color"

[ -z "$TMUX"  ] && { tmux attach || exec tmux new-session && exit;}


alias mypasswords="vim ~/.git-local/mypasswords.vi"
alias mycommit="p=`pwd` ; cd ~/.git-local ; git add . ; git commit -m'update'; cd $p "
