#!/bin/bash
export PS1='\[\033[01;32m\]\u@\h \[\033[01;33m\]\W\[\033[00m\]\$ '
export PATH=~/bin:~/.cabal/bin:$PATH:~/.platformio/penv/bin:~/.local/bin
export LS_COLORS='ow=01;36;40'
export VISUAL=nvim
export EDITOR=nvim
alias vi=nvim
alias ls="ls --color"
alias tdo="tmux detach-client -a"

if [[ "$HOSTNAME" == "MERCURY" ]]; then
  cd ~
  alias git="/mnt/c/Program\ Files/Git/bin/git.exe"
fi

cd ~

#[ -z "$TMUX"  ] && { tmux attach || exec tmux new-session; }

source ~/.password-store/.setup/startup.sh

settings() { 
  if [[ $@ == "commit" ]]; then 
    command ~/.settings/commit.sh
  else 
    command cd ~/.settings; 
  fi; 
}



